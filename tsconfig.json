{
	"compilerOptions": {
		"target": "es5",
		"module": "esnext",
		"lib": ["es5", "es2015", "dom"],
		"types": ["jest"],
		"allowJs": false,
		// "jsx": "react",
		"declaration": true,
		"sourceMap": true,
		"outDir": "dist",
		"rootDir": "src",
		"baseUrl": "src",
		"paths": {
			"test-setup": ["test-setup"]
		},
		"removeComments": true,
		"strict": true,
		"moduleResolution": "node",
		"allowSyntheticDefaultImports": true,
		"esModuleInterop": true,
		"resolveJsonModule": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true
	},
	"include": ["src/**/*.ts", "src/**/*.tsx"],
	"exclude": [
		"node_modules",
		"dist",
		"src/**/*.stories.tsx",
		"src/**/*.test.tsx",
		"src/test-setup.tsx"
	]
}
