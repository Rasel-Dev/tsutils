{
	"compilerOptions": {
		"target": "es5",
		"module": "esnext",
		"lib": ["es5", "es2015", "dom"],
		"types": ["jest"],
		"allowJs": false,
		// "jsx": "react",
		"declaration": true,
		"sourceMap": true,
		"outDir": "dist",
		"rootDir": "src",
		"baseUrl": "src",
		"removeComments": true,
		"strict": true,
		"moduleResolution": "node",
		"allowSyntheticDefaultImports": true,
		"esModuleInterop": true,
		"resolveJsonModule": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true
	},
	"include": ["src/**/*.ts"],
	"exclude": ["node_modules", "dist", "src/**/*.test.ts"]
}
